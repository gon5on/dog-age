<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 通常時 -->
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/bg_actionbar_item_off" />
        </shape></item>

    <!-- タップ時 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/bg_actionbar_item_on" android:startColor="@color/bg_actionbar_item_on" />
        </shape></item>

</selector>