<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- チェックON かつ 選択されている状態 -->
    <item android:state_checked="true" android:state_pressed="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/bg_input" />

                    <stroke android:width="2dp" android:color="@color/bg_input_frame_on" />

                    <corners android:radius="8dp" />

                    <size android:height="32dp" android:width="32dp" />
                </shape></item>
            <item android:drawable="@drawable/ic_check"/>
        </layer-list></item>

    <!-- チェックON　かつ 選択されていない状態 -->
    <item android:state_checked="true"><layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item><shape android:shape="rectangle">
                    <solid android:color="@color/bg_input" />

                    <stroke android:width="2dp" android:color="@color/bg_input_frame_off" />

                    <corners android:radius="8dp" />

                    <size android:height="32dp" android:width="32dp" />
                </shape></item>
            <item android:drawable="@drawable/ic_check"/>
        </layer-list></item>

    <!-- チェックOFF かつ 選択されている状態 -->
    <item android:state_checked="false" android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/bg_input" />

            <stroke android:width="2dp" android:color="@color/bg_input_frame_on" />

            <corners android:radius="8dp" />

            <size android:height="32dp" android:width="32dp" />
        </shape></item>

    <!-- チェックOFF かつ 選択されていない状態 -->
    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="@color/bg_input" />

            <stroke android:width="2dp" android:color="@color/bg_input_frame_off" />

            <corners android:radius="8dp" />

            <size android:height="32dp" android:width="32dp" />
        </shape></item>

</selector>