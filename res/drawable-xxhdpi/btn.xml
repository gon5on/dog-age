<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- タップ時 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/bgButtonOff" android:startColor="@color/bgButtonOff" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <size android:height="30dp" android:width="40dp" />
        </shape></item>

    <!-- 通常時 -->
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/bgButtonOff" android:startColor="@color/bgButtonOn" />

            <corners android:radius="7dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <size android:height="30dp" android:width="40dp" />
        </shape></item>

</selector>