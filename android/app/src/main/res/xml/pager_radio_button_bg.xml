<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/lightBrown" />
            <size android:width="@dimen/oneBlock" android:height="@dimen/oneBlock"/>
        </shape>
    </item>

    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item  android:left="@dimen/quarterBlock">
                <shape android:shape="oval">
                    <solid android:color="@color/lightBrown" />
                    <size android:width="@dimen/halfBlock" android:height="@dimen/halfBlock"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>