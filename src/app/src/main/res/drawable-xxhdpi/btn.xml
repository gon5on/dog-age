<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- タップ時 -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="8dip" />

            <gradient android:angle="90" android:centerColor="@color/btn" android:endColor="@color/btn" android:startColor="@color/btn" />
        </shape></item>

    <!-- 通常時 -->
    <item><shape android:shape="rectangle">
            <corners android:radius="8dip" />

            <gradient android:angle="90" android:centerColor="@color/btn" android:endColor="@color/btn_grade" android:startColor="@color/btn" />
        </shape></item>

</selector>