<resources>

    <!-- 基本設定 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/darkBrown</item>
        <item name="colorAccent">@color/green</item>
        <item name="alertDialogTheme">@style/AppAlertDialogStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textColorSecondary">@color/beige</item>
    </style>

    <!-- アラートダイアログ -->
    <style name="AppAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/brown</item>
        <item name="android:background">@color/beige</item>
        <item name="android:textColorPrimary">@color/darkBrown</item>
        <item name="android:textColorSecondary">@color/brown</item>
    </style>

    <!-- 透明背景ダイアログ -->
    <style name="TransparentDialogStyle" parent="AppAlertDialogStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--入力欄-->
    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/fontSizeLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@xml/input_bg</item>
        <item name="android:paddingLeft">@dimen/twoBlock</item>
        <item name="android:paddingRight">@dimen/twoBlock</item>
        <item name="android:paddingTop">@dimen/oneHalfBlock</item>
        <item name="android:paddingBottom">@dimen/oneHalfBlock</item>
    </style>

    <!-- チェックボックス -->
    <style name="AppCheckBoxTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlNormal">@color/brown</item>
        <item name="colorControlActivated">@color/darkBrown</item>
    </style>

    <!-- 茶色ボタン -->
    <style name="AppButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">@dimen/eightBlock</item>
        <item name="backgroundTint">@color/brown</item>
        <item name="cornerRadius">@dimen/fourBlock</item>
    </style>

    <!-- 透明背景ボタンスタイル -->
    <style name="TranslateButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/brown</item>
        <item name="rippleColor">@color/lightBrown</item>
    </style>

    <!-- 足跡付きラベル -->
    <style name="LabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableLeft">@drawable/ic_footprint</item>
        <item name="android:drawableStart">@drawable/ic_footprint</item>
        <item name="android:drawablePadding">@dimen/oneBlock</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 表組セル -->
    <style name="TableCellTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/halfBlock</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 表組ラベル -->
    <style name="TableLabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/halfBlock</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>