<resources>

    <!-- 基本設定 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/darkBrown</item>
        <item name="colorAccent">@color/green</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/AppButtonStyle</item>
        <item name="editTextStyle">@style/AppEditTextStyle</item>
        <item name="alertDialogTheme">@style/AppAlertDialogStyle</item>
        <item name="colorControlNormal">@color/beige</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColorPrimary">@color/brown</item>
        <item name="android:textColorSecondary">@color/brown</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- アラートダイアログ -->
    <style name="AppAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/darkBrown</item>
        <item name="android:background">@color/beige</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!-- 透明背景ダイアログ -->
    <style name="TransparentDialogStyle" parent="AppAlertDialogStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 入力欄 -->
    <style name="AppEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/fontSizeLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@xml/input_bg</item>
        <item name="android:paddingLeft">@dimen/twoBlock</item>
        <item name="android:paddingRight">@dimen/twoBlock</item>
        <item name="android:paddingTop">@dimen/oneHalfBlock</item>
        <item name="android:paddingBottom">@dimen/oneHalfBlock</item>
    </style>

    <!-- チェックボックス -->
    <style name="AppCheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/brown</item>
        <item name="colorControlActivated">@color/darkBrown</item>
    </style>

    <!-- 茶色ボタン -->
    <style name="AppButtonStyle" parent="BaseButton">
        <item name="android:background">@xml/btn_bg</item>
    </style>

    <!-- 透明背景ボタン -->
    <style name="TranslateButtonStyle" parent="BaseButton">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/zero</item>
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- ボタン共通スタイル -->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/oneBlock</item>
        <item name="android:paddingBottom">@dimen/oneBlock</item>
        <item name="android:paddingLeft">@dimen/twoBlock</item>
        <item name="android:paddingRight">@dimen/twoBlock</item>
        <item name="android:minHeight">@dimen/sixBlock</item>
        <item name="android:minWidth">@dimen/twentyBlock</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 入力欄見た目ボタン -->
    <style name="EditTextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/fontSizeLarge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@xml/input_bg</item>
        <item name="android:minHeight">@dimen/zero</item>
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/twoBlock</item>
        <item name="android:paddingRight">@dimen/twoBlock</item>
        <item name="android:paddingTop">@dimen/oneHalfBlock</item>
        <item name="android:paddingBottom">@dimen/oneHalfBlock</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- 通常のテキストスタイル -->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 足跡付きラベル -->
    <style name="LabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableLeft">@drawable/img_foot</item>
        <item name="android:drawableStart">@drawable/img_foot</item>
        <item name="android:drawablePadding">@dimen/oneBlock</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 表組セル -->
    <style name="TableCellTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/halfBlock</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 表組ラベル -->
    <style name="TableLabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSizeDefault</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/halfBlock</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>