<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/twoBlock"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        >

        <com.isseiaoki.simplecropview.CropImageView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            custom:cropMode="ratio_1_1"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twoBlock"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/buttonRotate"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:text="@string/rotate"
            android:layout_marginRight="@dimen/halfBlock"
            android:layout_marginEnd="@dimen/halfBlock"
            android:layout_weight="1"
            style="@style/LightBrownButtonStyle"
            />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_marginLeft="@dimen/halfBlock"
            android:layout_marginStart="@dimen/halfBlock"
            android:layout_weight="1"
            />

    </LinearLayout>

</RelativeLayout>