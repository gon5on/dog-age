<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/fiveBlock"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twoBlock"
            android:layout_marginRight="@dimen/twoBlock"
            android:layout_marginTop="@dimen/oneBlock"
            android:padding="@dimen/twoBlock"
            android:background="@drawable/img_frame_above1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/oneBlock"
                android:gravity="center_vertical"
                >

                <jp.co.e2.dogage.adapter.TouchFeedbackImageView
                    android:id="@+id/imageViewPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/oneBlock"
                    android:layout_marginEnd="@dimen/oneBlock"
                    />

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontSizeXLarge"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewKind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSizeLarge"
                />

            <TextView
                android:id="@+id/textViewBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSizeLarge"
                />

            <TextView
                android:id="@+id/textViewArchive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSizeLarge"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twoBlock"
            android:layout_marginRight="@dimen/twoBlock"
            android:layout_marginTop="@dimen/oneBlock"
            android:paddingLeft="@dimen/twoBlock"
            android:paddingRight="@dimen/twoBlock"
            android:paddingTop="@dimen/oneBlock"
            android:paddingBottom="@dimen/oneBlock"
            android:background="@drawable/img_frame_under1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dog_age"
                android:textSize="@dimen/fontSizeLarge"
                android:layout_centerVertical="true"
                style="@style/LabelTextViewStyle"
                />

            <TextView
                android:id="@+id/textViewPetAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/fontSizeXLarge"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twoBlock"
            android:layout_marginRight="@dimen/twoBlock"
            android:layout_marginTop="@dimen/oneBlock"
            android:paddingLeft="@dimen/twoBlock"
            android:paddingRight="@dimen/twoBlock"
            android:paddingTop="@dimen/oneBlock"
            android:paddingBottom="@dimen/oneBlock"
            android:background="@drawable/img_frame_under1"
            >

            <TextView
                android:id="@+id/textViewHumanAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/fontSizeXLarge"
                />

            <TextView
                style="@style/LabelTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/human_age"
                android:textSize="@dimen/fontSizeLarge" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twoBlock"
            android:layout_marginRight="@dimen/twoBlock"
            android:layout_marginTop="@dimen/oneBlock"
            android:paddingLeft="@dimen/twoBlock"
            android:paddingRight="@dimen/twoBlock"
            android:paddingTop="@dimen/oneBlock"
            android:paddingBottom="@dimen/oneBlock"
            android:background="@drawable/img_frame_under1"
            >

            <TextView
                android:id="@+id/textViewDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/fontSizeXLarge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/born_from"
                android:textSize="@dimen/fontSizeLarge"
                android:layout_centerVertical="true"
                style="@style/LabelTextViewStyle"
                />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>